<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context="com.uw.bbm.MainActivity">

    <TextView
            android:id="@+id/main_available_tv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:text="@string/main_available"/>
    <View
            android:id="@+id/main_available_div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/main_available_tv"
            android:background="@android:color/holo_blue_bright"/>
    <GridView
            android:id="@+id/main_contact_grid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/main_available_div"
            android:fadingEdge="none"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:columnWidth="100dp"
            android:numColumns="3"
            android:scrollbars="none"
            android:stretchMode="none" />
    <!--android:columnWidth="305dp"-->
</RelativeLayout>
